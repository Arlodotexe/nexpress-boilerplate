    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "cwd": "${workspaceFolder}/build",
            "envFile": "${workspaceFolder}/.env",
            "skipFiles": [
                "<node_internals>/**",
                "${workspaceFolder}/node_modules/**/*.js"
            ],
            "outFiles": [
                "${workspaceFolder}/build/**/*.js"
            ],
            "sourceMaps": true,
            "program": "${workspaceFolder}/build/index.js",
            "preLaunchTask": "npm: build",
            "console": "internalConsole",
            "trace": true
        }
    ]
}