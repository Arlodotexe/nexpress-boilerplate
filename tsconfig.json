{
  "extends": "@tsconfig/node12/tsconfig.json",
  "compilerOptions": {
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "module": "commonjs",
      "outDir": "./build",
      "rootDir": "./src",
      "sourceMap": true,
      "removeComments": false,
      "esModuleInterop": true
  },
  "include": [
      "./src/**/*"
  ],
  "exclude": [
      "./node_modules"
  ]
}